%ヘッダ定義
\makeatletter
\def\@documentnumber{}
\def\documentnumber#1{\gdef\@documentnumber{#1}}
\def\@destination{}
\def\destination#1{\gdef\@destination{#1}}
\renewcommand{\@maketitle}{\newpage
%文章番号（もしあれば）＋日付
\begin{flushright}
    \if{\@documentnumber}{}
    \else
    \@documentnumber \par
    \fi
\@date
\end{flushright}
\vspace{1.0\zh}
%宛先
\@destination
\vspace{1.0\zh}
%作成者
\begin{flushright}
\@author
\end{flushright}
\bigskip
%タイトル
    \begin{center}
        {\Large \@title}
    \end{center}
    \bigskip
    }
\makeatother
%ヘッダ定義終了

